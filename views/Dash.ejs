<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="icon" type="image/png" href="photo/dumbells.png">
    <style>
        body {
        background-color: #f8f9fa;
        }
        .navbar-brand span {
        color: #00d084;
        font-weight: bold;
        }
        .table th {
        background-color: #343a40;
        color: white;
        }
    </style>
</head>
<body>
<header class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="Home.html">
        <img src="/photo/dumbells.png" alt="Logo" style="height: 30px;">
        GonnaFit Admin
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="navMenu">
            <li class="nav-item"><a class="nav-link active" href="/Dash.html">Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="/Manage.html">Manage</a></li>
        </ul>
        <div class="d-flex" id="user-buttons">
            <% if (user && user.displayname) { %>
                <span class="navbar-text me-3 text-white">
                    สวัสดี, <%= user.displayname %> <%= user.surname ?? "" %>
                </span>
                <a class="btn btn-outline-light" href="/logout">Log out</a>
            <% } else { %>
                <a class="btn btn-outline-light" href="/logout">Log out</a>
            <% } %>
        </div>
    </div>
</header>

<main class="container mt-4">
    <h1>Admin Dashboard</h1>
    <div class="row mt-4 g-3">
        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">สมาชิกทั้งหมด</h5>
                    <p class="display-4" id="total-members"><%= totalMembers %></p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">สมาชิกใหม่วันนี้</h5>
                    <p class="display-4" id="new-members"><%= newMembersToday %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">สมาชิกใหม่รายสัปดาห์</h5>
            <canvas id="memberChart" height="100"></canvas>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">สมาชิกล่าสุด</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ชื่อ</th>
                        <th>นามสกุล</th>
                        <th>Email</th>
                        <th>วันที่สมัคร</th>
                    </tr>
                </thead>
                <tbody id="latest-members">
                    <% if (latestMembers && latestMembers.length > 0) { %>
                        <% latestMembers.forEach(u => { %>
                            <tr>
                                <td><%= u.displayname %></td>
                                <td><%= u.surname ?? "" %></td>
                                <td><%= u.email %></td>
                                <td><%= new Date(u.created_at).toLocaleDateString() %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="4" class="text-center">ไม่พบข้อมูลสมาชิก</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // ข้อมูลสำหรับกราฟ (ถูกส่งมาจาก Server แล้ว)
        const labels = <%- JSON.stringify(weekData.labels) %>;
        const counts = <%- JSON.stringify(weekData.counts) %>;

        // สร้างกราฟ
        const ctx = document.getElementById('memberChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'สมาชิกใหม่รายวัน',
                    data: counts,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    fill: false
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        // ตรวจสอบให้แน่ใจว่าค่า y-axis เป็นจำนวนเต็ม (ถ้าจำเป็น)
                        ticks: {
                            callback: function(value) {if (value % 1 === 0) {return value;}}
                        }
                    }
                }
            }
        });
    });
</script>
</body>
</html>